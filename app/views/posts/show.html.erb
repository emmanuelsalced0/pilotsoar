<%= render 'shared/navbar' %>
    <div class="container post-container">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"> <%= @post.title %>
                    <small>PilotSoar</small>   
                </h1>
            </div>
        </div>



        <div class="row">

            <div class="col-md-8">
                <%= image_tag @post.image, class: 'img-responsive' %>
            </div>

            <div class="col-md-4">
                <h3>Project Description</h3>
                <p> <%= @post.body %></p>
            </div>

        </div>
        <!-- /.row -->

        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Related Projects</h3>
            </div>

           
            <% @posts.each do |post| %>
                    <div class="col-lg-3 col-sm-6">
                        <a><%= link_to post_path(post), class: 'portfolio-box' do %>
                            <%= image_tag (post.image), class: 'img-responsive portfolio-item' %>
                             <div class="portfolio-box-caption">
                                <div class="portfolio-box-caption-content">
                                    <div class="project-category text-faded">
                                    Jackie
                                    </div>
                                <div class="project-name">
                                    <%= post.title%>
                                </div>
                            </div>
                        </div>
                         <% end %></a>
                    </div>
                <% end %>

        </div>
</div>
<%= render 'shared/contact' %>